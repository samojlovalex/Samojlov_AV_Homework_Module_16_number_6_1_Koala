<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/button_itemCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_new_delete_all_buttom_itemBT"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="@dimen/cardElevation"
                android:text="@string/deleteProfileButtonBT_text"
                android:textColor="@color/Red"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/alterDialog_cornerRadius_16dp"
                app:strokeColor="@color/Red"
                app:strokeWidth="@dimen/alterDialog_strokeWidth_1dp"
                app:tint="@color/white"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/new_new_delete_all_buttom_itemBT"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="@dimen/cardElevation"
                android:text="@string/newProfileButtonBT_Text"
                android:textColor="@color/Blue"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/alterDialog_cornerRadius_16dp"
                app:strokeColor="@color/Blue"
                app:strokeWidth="@dimen/alterDialog_strokeWidth_1dp"
                app:tint="@color/white"></com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>